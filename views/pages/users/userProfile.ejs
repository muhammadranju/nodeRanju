<!-- Navbar-->
<%- include('../partials/header.ejs') %>
<!-- Navbar-->

<div class="container mt-1 mb-3 ">
    <div class="row overflow-hidden d-flex justify-content-center">
        <!-- Card shadow: Round picture + outline socials -->
        <div class="card text-center mt-3">
            <div class="card-body">
                <a href="/users/profile">
                    <img class="d-inline-block rounded-circle mb-3 lazyload" id="profilePics" width="96"
                        data-src="/uploads/default.png" src="/uploads/default.png" alt="Richard Williams" />
                </a>

                <h4 class="pt-1 font-weight-bold mb-1">Muhammad Ranju</h4>
                <a class="nav-link-style font-weight-bold mb-5" target="_black"
                    href="mailto:pikslide@gmail.com">pikslide@gmail.com
                </a>

                <div class="mb-3 mt-2 d-flex justify-content-center">
                    <p class="mb-0 col-md-5 ">
                        Hi, Thank you for visiting my profile. I am Muhammad Ranju. I have a special skill in
                        Social Media Post & Flyer design
                    </p>
                </div>
                <div class="mb-4">
                    <% if(!isLogin){ %>
                    <button type="button" class="btn btn-primary btn-shadow btn-sm font-weight-bold">Follow</button>
                    <% } %>
                    <% if(isLogin){ %>
                    <a href="/users/edit" type="button" class="btn btn-outline-primary btn-sm font-weight-bold">Edit
                        Profile</a>
                    <% } %>
                </div>
                <div class="mb-3">
                    <a class="social-btn sb-round sb-facebook ml-2 mb-2" href="#">
                        <i class="czi-facebook"></i>
                    </a>
                    <a class="social-btn sb-round sb-twitter ml-2 mb-2" href="#">
                        <i class="czi-twitter"></i>
                    </a>
                    <a class="social-btn sb-round sb-pinterest ml-2 mb-2" href="#">
                        <i class="czi-pinterest"></i>
                    </a>
                    <a class="social-btn sb-round sb-instagram ml-2 mb-2" href="#">
                        <i class="czi-instagram"></i>
                    </a>
                    <a class="social-btn sb-round sb-youtube ml-2 mb-2" href="#">
                        <i class="czi-youtube"></i>
                    </a>
                </div>

                <div class="container pb-5 mb-2 ">
                    <div class="row pt-3 mx-n2">
                        <% for(let i=0; i<20; i++){ %>
                        <!-- Product-->
                        <div class="card product-card  col-lg-3 col-md-4 col-sm-4 mt-3 ">
                            <a class="card-img-top d-block" href="/posts/products">

                                <img data-src="/images/marketplace/products/12.jpg"
                                    src="/images/lazyload/pikslide-lazyload.jpg" class="card-img-top mt-3 lazyload"
                                    alt="Product">
                            </a>
                            <div class="my-2 mx-2 ">
                                <div class="d-flex flex-wrap justify-content-between align-items-start pb-1">
                                    <div class="text-muted font-size-xs mr-1">by
                                        <a class="product-meta font-weight-bold" href="/users/profile">Pikslide</a>
                                    </div>
                                    <div class="star-rating">
                                        <i class="sr-star czi-star-filled active"></i>
                                        <i class="sr-star czi-star-filled active"></i>
                                        <i class="sr-star czi-star-filled active"></i>
                                        <i class="sr-star czi-star-filled active"></i>
                                        <i class="sr-star czi-star-filled active"></i>
                                    </div>
                                </div>
                                <h3 class="product-title font-size-sm mb-2">
                                    <a href="/posts/products">Floating Phone and Tablet...</a>
                                </h3>
                            </div>
                            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
                                <div class="mr-2">
                                    <button class="btn btn-danger btn-shadow btn-sm" type="button"><i
                                            class="czi-heart font-size-lg mr-2"></i>Like</button>
                                </div>
                                <div class="">
                                    <a class="social-link sb-sm ml-2" href="#">
                                        <i class="czi-share-alt font-size-lg align-middle text-muted mr-3"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

            </div>

            <!-- pagination start -->
            <div class="container pb-3 ">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a href="#" class="page-link" aria-label="Previous">
                                <i class="czi-arrow-left"></i>
                            </a>
                        </li>
                        <li class="page-item d-sm-none">
                            <span class="page-link page-link-static">1 / 5</span>
                        </li>
                        <li class="page-item active d-none d-sm-block" aria-current="page">
                            <a href="#" class="page-link">1</a>
                        </li>
                        <li class="page-item d-none d-sm-block">
                            <a href="#" class="page-link">2</a>
                        </li>
                        </li>
                        <li class="page-item">
                            <a href="#" class="page-link" aria-label="Next">
                                <i class="czi-arrow-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>



<%- include('../partials/footer.ejs') %>
</body>

</html>